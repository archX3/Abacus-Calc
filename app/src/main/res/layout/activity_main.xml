<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/activity_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    tools:context="com.sample.foo.samplecalculator.MainActivity" android:background="@android:color/holo_orange_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:padding="0dp"
                    android:layout_margin="0dp">

        <TextView
                android:id="@+id/infoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="30sp"/>

        <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="bottom"
                android:lines="2"
                android:maxLines="2"
                android:textSize="20sp"
                android:layout_below="@+id/infoTextView" android:layout_alignRight="@+id/buttonDivide"
                android:layout_alignEnd="@+id/buttonDivide"/>

        <Button
                android:id="@+id/buttonSeven"
                style="@style/calcBtnStyle"
                android:layout_below="@id/editText"
                android:text="7" android:typeface="sans" android:elevation="0dp"/>

        <Button
                android:id="@+id/buttonEight"
                style="@style/calcBtnStyle"
                android:layout_below="@id/editText"
                android:layout_toRightOf="@id/buttonSeven"
                android:text="8"/>

        <Button
                android:id="@+id/buttonNine"
                style="@style/calcBtnStyle"
                android:layout_below="@id/editText"
                android:layout_toRightOf="@id/buttonEight"
                android:text="9"/>

        <Button
                android:id="@+id/buttonFour"
                style="@style/calcBtnStyle"
                android:layout_below="@id/buttonSeven"
                android:text="4"/>

        <Button
                android:id="@+id/buttonFive"
                style="@style/calcBtnStyle"
                android:layout_alignRight="@id/buttonEight"
                android:layout_below="@id/buttonEight"
                android:text="5"/>

        <Button
                android:id="@+id/buttonSix"
                style="@style/calcBtnStyle"
                android:layout_alignRight="@id/buttonNine"
                android:layout_below="@id/buttonNine"
                android:text="6"/>

        <Button
                android:id="@+id/buttonOne"
                style="@style/calcBtnStyle"
                android:layout_below="@id/buttonFour"
                android:text="1"/>

        <Button
                android:id="@+id/buttonTwo"
                style="@style/calcBtnStyle"
                android:layout_alignRight="@id/buttonEight"
                android:layout_below="@id/buttonFive"
                android:text="2"/>

        <Button
                android:id="@+id/buttonThree"
                style="@style/calcBtnStyle"
                android:layout_alignRight="@id/buttonNine"
                android:layout_below="@id/buttonSix"
                android:text="3"/>

        <Button
                android:id="@+id/buttonDot"
                style="@style/calcBtnStyle"
                android:layout_below="@id/buttonOne"
                android:text="."/>

        <Button
                android:id="@+id/buttonZero"
                style="@style/calcBtnStyle"
                android:layout_alignRight="@id/buttonEight"
                android:layout_below="@id/buttonTwo"
                android:text="0"/>

        <Button
                android:id="@+id/buttonEqual"
                style="@style/calcBtnStyle"
                android:layout_alignRight="@id/buttonNine"
                android:layout_below="@id/buttonThree"
                android:text="="/>

        <Button
                android:id="@+id/buttonDivide"
                style="@style/calcBtnStyle"
                android:layout_alignTop="@id/buttonNine"
                android:layout_toRightOf="@id/buttonNine"
                android:text="/"/>

        <Button
                android:id="@+id/buttonMultiply"
                style="@style/calcBtnStyle"
                android:layout_alignTop="@id/buttonSix"
                android:layout_toRightOf="@id/buttonSix"
                android:text="*"/>

        <Button
                android:id="@+id/buttonSubtract"
                style="@style/calcBtnStyle"
                android:layout_alignTop="@id/buttonThree"
                android:layout_toRightOf="@id/buttonThree"
                android:text="-"/>

        <Button
                android:id="@+id/buttonAdd"
                style="@style/calcBtnStyle"
                android:layout_alignTop="@id/buttonEqual"
                android:layout_toRightOf="@id/buttonEqual"
                android:text="+"/>

        <Button
                android:id="@+id/buttonClear"
                style="@style/calcBtnStyle"
                android:layout_width="60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/ic_input_delete"
                android:padding="10dp" android:paddingBottom="10dp"
                android:paddingLeft="10dp" android:paddingRight="10dp"
                android:paddingStart="10dp" android:paddingTop="10dp" android:paddingEnd="10dp"
                android:layout_below="@+id/infoTextView" android:layout_alignRight="@+id/editText"
                android:layout_alignEnd="@+id/editText" android:drawablePadding="10dp" android:paddingHorizontal="20dp"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
</layout>
